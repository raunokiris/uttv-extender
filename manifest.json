{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "uttvex",
  "version": "0.0.14",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  
  "options_ui": {
    "page": "options/options.html",
	"chrome_style": true
  },
  
  "icons": { 
    "16": "ico/icon16.png",
    "48": "ico/icon48.png",
    "128": "ico/icon128.png"
  },
  
  "content_scripts": [ 
    {
      "matches": ["*://www.uttv.ee/naita?id=*", "*://panopto.ut.ee/Panopto/Content/Sessions/*", "*://www.uttv.ee/embed?id=*"],
      "js": ["js/content.js"],
      "css": ["css/uttv.css"],
      "all_frames": true
    },
    {
      "matches": ["*://panopto.ut.ee/Panopto/Pages/Viewer.aspx*"],
      "js": ["js/panopto_handler.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["*://moodle.ut.ee/mod/page/view.php?id=*"],
      "js": ["js/moodle_handler.js"],
      "css": ["css/moodle.css"]
    },

    {
      "matches": ["*://h5p.org/h5p/embed/*"],
      "js": ["js/content.js"],
      "css": ["css/h5p.css"],
      "all_frames": true
    }
  ],

  "permissions": ["storage"]
}
